<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register_bg"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_160"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50"
            android:layout_marginLeft="@dimen/dp_margin_20"
            android:layout_marginRight="@dimen/dp_margin_20">

            <ImageView
                android:id="@+id/register_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/login_phone" />

            <EditText
                android:id="@+id/register_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_margin_20"
                android:layout_toRightOf="@id/register_phone"
                android:background="@null"
                android:hint="手机号"
                android:inputType="phone"
                android:textColor="@color/colorFFF"
                android:textColorHint="@color/colorFFF"
                android:textCursorDrawable="@drawable/edit_line"
                android:textSize="@dimen/sp_text_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50"
            android:layout_marginLeft="@dimen/dp_margin_20"
            android:layout_marginRight="@dimen/dp_margin_20">

            <ImageView
                android:id="@+id/register_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/code" />

            <EditText
                android:id="@+id/register_ed_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_margin_20"
                android:layout_toRightOf="@id/register_code"
                android:background="@null"
                android:hint="验证码"
                android:textColor="@color/colorFFF"
                android:textColorHint="@color/colorFFF"
                android:textCursorDrawable="@drawable/edit_line"
                android:textSize="@dimen/sp_text_16" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:textColor="@color/colorFFF"
                android:textSize="@dimen/sp_text_12"
                android:paddingTop="@dimen/dp_margin_5"
                android:paddingBottom="@dimen/dp_margin_5"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50"
            android:layout_marginLeft="@dimen/dp_margin_20"
            android:layout_marginRight="@dimen/dp_margin_20"
            android:layout_marginTop="@dimen/dp_margin_10">

            <ImageView
                android:id="@+id/register_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/login_lock" />

            <EditText
                android:id="@+id/register_ed_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_margin_20"
                android:layout_toRightOf="@id/register_lock"
                android:background="@null"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:textColor="@color/colorFFF"
                android:textColorHint="@color/colorFFF"
                android:textCursorDrawable="@drawable/edit_line"
                android:textSize="@dimen/sp_text_16" />

            <ImageView
                android:id="@+id/register_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/login_eye"
                android:padding="@dimen/dp_margin_5"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorFFF" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_info"
        android:layout_marginRight="@dimen/dp_margin_20"
        android:layout_marginTop="@dimen/dp_margin_10"
        android:text="已有账户？立即登录"
        android:textColor="@color/colorFFF"
        android:textSize="@dimen/sp_text_14"
        android:paddingBottom="@dimen/dp_margin_5"
        android:paddingTop="@dimen/dp_margin_5"
        />


    <RelativeLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_margin_40"
        android:layout_above="@+id/login_bottom"
        android:layout_marginBottom="@dimen/dp_margin_50"
        android:layout_marginLeft="@dimen/dp_margin_20"
        android:layout_marginRight="@dimen/dp_margin_20"
        android:background="@drawable/login_register_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/colorFF5F71"
            android:textSize="@dimen/sp_text_18" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_120"
        android:layout_alignParentBottom="true" />


</RelativeLayout>