<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_margin_10"
        android:background="@drawable/pay">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_margin_20"
            android:layout_marginTop="@dimen/layout_30"
            android:text="余额"
            android:textColor="@color/color_343"
            android:textSize="@dimen/sp_text_18" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_margin_20"
            android:layout_marginTop="@dimen/layout_10"
            android:textColor="@color/color_343"
            android:textSize="@dimen/sp_text_64" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_margin_40"
        android:layout_marginTop="-20dp"
        android:background="@drawable/buy_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消费金额"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_text_14" />

        <View
            android:layout_width="@dimen/layout_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_margin_5"
            android:layout_marginBottom="@dimen/dp_margin_5"
            android:background="@color/colorede" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消费时间"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_text_14" />
    </LinearLayout>

    <com.abner.ming.base.refresh.recy.XRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>