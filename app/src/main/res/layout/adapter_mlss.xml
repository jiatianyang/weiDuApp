<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_120"
        android:layout_marginRight="@dimen/dp_margin_10"
        android:layout_marginBottom="@dimen/dp_margin_10"
        android:background="@drawable/index_item_bg_line">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/layout_85"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dp_margin_10" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_margin_10"
            android:layout_marginRight="@dimen/dp_margin_10"
            android:layout_toRightOf="@+id/imageview">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_margin_20"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_margin_10"
                android:textColor="#d43c3c" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>