<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_margin_20"
        android:background="@drawable/index_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_margin_20"
        android:paddingRight="@dimen/dp_margin_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50">

            <TextView
                android:id="@+id/tv_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="收件人："
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <EditText
                android:id="@+id/address_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_address_name"

                android:background="@null"
                android:gravity="center_vertical"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_text_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorede" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号码："
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_phone"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_text_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorede" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所在地区："
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_address"
                android:background="@null"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_text_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorede" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_80">

            <TextView
                android:id="@+id/tv_all_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_margin_10"
                android:text="详细地址："
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <EditText
                android:id="@+id/all_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_margin_10"
                android:layout_toRightOf="@id/tv_all_address"
                android:background="@null"
                android:gravity="top"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_text_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorede" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50">

            <TextView
                android:id="@+id/tv_post_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="邮政编码："
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <EditText
                android:id="@+id/post_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_post_code"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="number"
                android:textColor="@color/color999"
                android:textSize="@dimen/sp_text_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1"
                android:layout_alignParentBottom="true"
                android:background="@color/colorede" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/address_add"
            android:layout_width="@dimen/layout_120"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_car_bg"
            android:text="保存并使用"
            android:textColor="@color/colorFFF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_margin_50" />
    </LinearLayout>

</RelativeLayout>