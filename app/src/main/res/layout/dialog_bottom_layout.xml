<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_margin_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请选择支付方式"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_text_16" />

        <ImageView
            android:id="@+id/dialog_cancle"
            android:layout_width="@dimen/dp_margin_20"
            android:layout_height="@dimen/dp_margin_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_margin_10"
            android:src="@drawable/comment_cancle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1"
            android:layout_alignParentBottom="true"
            android:background="@color/colorf2f" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_money_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_margin_10"
        android:layout_marginBottom="@dimen/dp_margin_10"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_marginLeft="@dimen/dp_margin_10"
        android:layout_marginTop="@dimen/dp_margin_10"
        android:layout_marginRight="@dimen/dp_margin_10"
        android:background="@drawable/index_item_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_margin_10"
        android:paddingBottom="@dimen/dp_margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_margin_10"
            android:layout_marginRight="@dimen/dp_margin_10">

            <ImageView
                android:id="@+id/iv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_margin_20"
                android:layout_toRightOf="@id/iv_money"
                android:text="余额支付"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <ImageView
                android:id="@+id/iv_money_select"
                android:layout_width="@dimen/layout_20"
                android:layout_height="@dimen/layout_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_margin_10"
                android:background="@drawable/shop_car_all" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_margin_10"
            android:layout_marginTop="@dimen/dp_margin_20"
            android:layout_marginRight="@dimen/dp_margin_10">

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_margin_20"
                android:layout_toRightOf="@id/iv_weixin"
                android:text="微信支付"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <ImageView
                android:id="@+id/iv_weixin_select"
                android:layout_width="@dimen/layout_20"
                android:layout_height="@dimen/layout_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_margin_10"
                android:background="@drawable/shop_car_cricle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_margin_10"
            android:layout_marginTop="@dimen/dp_margin_20"
            android:layout_marginRight="@dimen/dp_margin_10">

            <ImageView
                android:id="@+id/iv_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_margin_20"
                android:layout_toRightOf="@id/iv_zhifubao"
                android:text="支付宝支付"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_text_14" />

            <ImageView
                android:id="@+id/iv_zhifubao_select"
                android:layout_width="@dimen/layout_20"
                android:layout_height="@dimen/layout_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_margin_10"
                android:background="@drawable/shop_car_cricle" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_margin_10"
        android:layout_marginTop="@dimen/dp_margin_20"
        android:layout_marginRight="@dimen/dp_margin_10"
        android:background="@drawable/shop_car_bg"
        android:text="确认支付"
        android:textColor="@color/colorFFF"
        android:textSize="@dimen/sp_text_14" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_margin_10"/>

</LinearLayout>